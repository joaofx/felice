@model Product[]

<h2>Products</h2>

<p>
    <a href="@Url.Action("New", "Product")">New Product</a>
</p>

<table>
    <tr>
        <th>Name</th>
        <th>Price</th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Price.Show()</td>
        </tr>
    }
</table>